<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="407.0" prefWidth="600" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.TeamTask.TeamAddition">
    <children>

        <VBox layoutX="50" layoutY="80" prefHeight="278.0" prefWidth="442.0" spacing="15">
            <children>
                <HBox spacing="10">
                    <Label minWidth="80" text="團隊名稱：">
                  <font>
                     <Font size="18.0" />
                  </font></Label>
                    <TextField fx:id="teamName" prefHeight="23.0" prefWidth="329.0" />
                </HBox>
                <HBox spacing="10" />
                <HBox spacing="10">
                    <Label minWidth="80" text="團隊描述：">
                  <font>
                     <Font size="18.0" />
                  </font></Label>
                    <TextArea fx:id="teamDescription" prefHeight="208.0" prefRowCount="2" prefWidth="328.0" />
                </HBox>
            </children>
        </VBox>

        <Button fx:id="comfirmButton" defaultButton="true" layoutX="504.0" layoutY="358.0" mnemonicParsing="false" onAction="#ConfirmTeam" prefHeight="36.0" prefWidth="80.0" text="確認" textFill="#613535" />
        <Button fx:id="cancelButton" cancelButton="true" layoutX="502.0" layoutY="16.0" mnemonicParsing="false" onAction="#CancelScene" prefHeight="36.0" prefWidth="84.0" text="取消" />
      <Label alignment="CENTER" layoutX="249.0" layoutY="30.0" minWidth="80" text="創建團隊" textAlignment="CENTER">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Label fx:id="errorLabel" layoutX="150.0" layoutY="358.0" minWidth="80" prefHeight="22.0" prefWidth="329.0" textAlignment="CENTER" textFill="RED">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: &quot;F7F7F7&quot;;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.LoginSystem">
    <children>
        <TextField fx:id="usernameField" layoutX="198.0" layoutY="155.0" prefHeight="23.0" prefWidth="219.0" />
        <PasswordField fx:id="passwordField" layoutX="197.0" layoutY="210.0" prefHeight="23.0" prefWidth="219.0" />

        <!-- 歡迎標籤，置中 -->
        <Label alignment="CENTER" layoutX="0.0" layoutY="84.0" prefHeight="19.0" prefWidth="600.0" text="Welcome to TaskAnt!" wrapText="true">
            <font>
                <Font name="Arial Bold Italic" size="14.0" />
            </font>
        </Label>

        <!-- 提示標籤，置中 -->
        <Label alignment="CENTER" layoutX="0.0" layoutY="103.0" prefHeight="19.0" prefWidth="600.0" text="Please enter your username and password to login.">
            <font>
                <Font name="Arial Italic" size="12.0" />
            </font>
        </Label>

        <Label layoutX="128.0" layoutY="159.0" text="Username:" />
        <Label layoutX="130.0" layoutY="214.0" text="Password:" />
        <Button defaultButton="true" layoutX="199.0" layoutY="252.0" mnemonicParsing="false" onAction="#onLogin" prefHeight="23.0" prefWidth="69.0" text="Login" />
        <Button layoutX="344.0" layoutY="252.0" mnemonicParsing="false" onAction="#onRegister" text="Register?" />
        <Label fx:id="statusLabel" alignment="CENTER" layoutX="192.0" layoutY="289.0" prefHeight="15.0" prefWidth="219.0" textAlignment="CENTER" textFill="RED" />
    </children>
</AnchorPane>

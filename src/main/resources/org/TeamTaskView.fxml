<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.TeamTask.TeamTaskView">
    <children>
        <!-- 返回按鈕 -->
        <Button fx:id="backButton" text="返回" layoutX="10" layoutY="10" onAction="#goBack" />

        <!-- 新增任務按鈕 -->
        <Button fx:id="addTaskButton" text="新增任務" layoutX="550" layoutY="10" onAction="#addTask" />

        <!-- 任務列表 -->
        <VBox fx:id="taskListPane" layoutX="50" layoutY="50" prefWidth="600" prefHeight="400" spacing="10">
            <!-- 動態加載任務 -->
        </VBox>
    </children>
</AnchorPane>